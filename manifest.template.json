{
  "manifest_version": 3,
  "name": "Soulside AI",
  "version": "1.0.3",
  "description": "Latest Behavioral Health AI for IOPs",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "background",
    "tabs",
    "cookies",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "http://localhost:5173/*",
    "https://*.soulsidehealth.com/*",
    "https://*.advancedmd.com/*",
    "https://www.soulside.ai/*"
  ],
  "action": {
    "default_title": "Soulside AI"
  },
  "background": {
    "service_worker": "scripts/background.bundle.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:5173/*",
        "https://*.soulsidehealth.com/*",
        "https://*.advancedmd.com/*",
        "https://www.soulside.ai/*"
      ],
      "js": ["scripts/content.bundle.js"],
      "type": "module"
    }
  ],
  "icons": {
    "16": "./assets/icons/icon-16.png",
    "32": "./assets/icons/icon-32.png",
    "48": "./assets/icons/icon-64.png",
    "128": "./assets/icons/icon-128.png",
    "256": "./assets/icons/icon-256.png"
  }
}
