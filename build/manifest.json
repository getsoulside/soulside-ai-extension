{
  "manifest_version": 3,
  "name": "Soulside AI",
  "version": "1.0",
  "description": "Latest Behavioral Health AI for IOPs",
  "permissions": ["storage", "activeTab", "scripting", "background", "tabs", "cookies"],
  "host_permissions": ["https://*.soulsidehealth.com/*", "https://*.advancedmd.com/*"],
  "background": {
    "service_worker": "scripts/background.bundle.js",
    "type": "module"
  },
  "icons": {
    "16": "./assets/icons/icon-16.png",
    "32": "./assets/icons/icon-32.png",
    "48": "./assets/icons/icon-64.png",
    "128": "./assets/icons/icon-128.png",
    "256": "./assets/icons/icon-256.png"
  },
  "environment": {
    "APP_ENV": "dev",
    "API_ENDPOINT": "https://backend.dev.soulsidehealth.com/api/v1",
    "PLATFORM_URL": "https://ehr.dev.soulsidehealth.com"
  }
}
